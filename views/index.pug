doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Smash.gg bracket viewer
        
        //Bootstrap CSS and JS
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        
        script(src="./js/jquery-3.6.0.min.js")
        script(src="./js/config.js")

        link(src="./style/index.css")
    body
        div(class="container")
            ul(class="nav nav-tabs")
                li(class="link nav-item")
                    button(class="nav-link active" id="tournamentInfoTab") Tournament Information
                li(class="link nav-item")
                    button(class="nav-link" id="appearanceTab") Appearance
            div(class="container-fluid border p-5" id="tournamentInfoContainer")
                label(class="form-label" for="APIToken") Enter API Authorization token here (go to your account's settings => developer settings => generate token)
                input(class="form-control" type="text" id="APIToken")
                label(class="form-label mt-5" for="tournamentSlug") Enter Tournament Slug here (the tournament's name in the link after smash.gg/tournament/)
                input(class="form-control" type="text" id="tournamentSlug")
                label(class="form-label mt-5") Select Event
                div(class="dropdown")
                    button(class="btn btn-secondary dropdown-toggle disabled" type="button" id="eventSelectorButton" data-bs-toggle="dropdown" aria-expanded="false") Select Event
                    ul(class="dropdown-menu" id="eventList")
                        li
                            button(class="dropdown-item") Singles
                        li
                            button(class="dropdown-item") Doubles                      

            div(class="container-fluid border p-5" id="appearanceContainer")
        